{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="home_main_container">
        <div class="home_content">
            {% include "partials/contents/header.html.twig" %}
            <div class="container home">
                <div class="row ml-auto mr-auto">
                    <div class="col-lg-12">
                        <h2 class="home_main_title">Trouvez des activités à proximité</h2>
                        <p class="home_introduction">Explore top-rated attractions, activities and more with bini voyages </p>
                        <div class="input-group my-4">
                            <input type="text" class="form-control" placeholder="Search something ..." aria-label="Search something ..." aria-describedby="basic-addon2"/>
                            <div class="input-group-append">
                                <button class="btn btn-outline-perso" type="submit"> Search </button>
                            </div>
                        </div>
                        {% include "home/_category_card.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid listing">
        <div class="row ml-auto mr-auto">
            <div class="col-lg-12">
                <h2 class="listing_heading_title text-center" style="color: #26354e;">Circuits populaires</h2>
                <p class="text-muted text-center">Les 3 circuits les plus populaires de Bini - voyages</p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% include "home/_listing_card.html.twig" %}
                </div>
            </div>
        </div>
    </div>
    <div class="categoy_popular mt-5">
        <div class="category_content">
            <div class="container-fluid category">
                <div class="row ml-auto mr-auto">
                    <div class="col-lg-12">
                        <h2 class="category_heading_title text-center">Les catégories les plus populaires</h2>
                        <p class="text-center">Les 3 catégories les plus populaires de Bini - voyages</p>
                    </div>
                </div>    
            </div>
            <div class="container">
                <div class="row">
                    {% include "home/_popular_cat.html.twig" %}
                </div>
            </div>
        </div>
    </div>
    <div class="container places_popular mt-4">
        <div class="row ml-auto mr-auto">
            <div class="col-lg-12">
                <h2 class="places_heading_title text-center" style="color:#26354e;">Les Endroits à visiter</h2>
                <p class="text-muted text-center"> Tous les endroits à visiter avec Bini - voyages</p>
            </div>
        </div>
        {% include "home/_places_card.html.twig" %}
    </div>
    {% include "partials/contents/footer.html.twig" %}
{% endblock %}
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script type="text/javascript">
    window.addEventListener("scroll", function () {
        var header = document.querySelector("header");
        header.classList.toggle("sticky", window.scrollY > 0);
    });
</script>
{% endblock %}
