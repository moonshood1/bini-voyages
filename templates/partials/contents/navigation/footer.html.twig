{% for front in fronts %}
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4>A propos</h4>
                    <p class="mt-3">{{ front.frontFooterAbout }}</p>
                </div>
                <div class="col-md-6">
                    <h4>Contactez nous</h4>
                    <p class="mt-3"><i class="fas fa-map-marker-alt"></i> {{ front.frontFooterLocation }}</p>
                    <p><i class="fas fa-envelope"></i> {{ front.frontFooterEmail }}</p>
                    <p><i class="fas fa-phone-square-alt"></i> +225 {{ front.frontFooterContact1 }} / +225 {{ front.frontFooterContact2 }}</p>
                    <p class="mt-3">
                        <a href="{{ front.frontFooterFacebook }}" class="footer_icon"> <i class="fab fa-facebook-f"></i> </a>
                        <a href="{{ front.frontFooterTwitter }}" class="footer_icon"><i class="fab fa-twitter"></i></a>
                        <a href="{{ front.frontFooterInstagram }}" class="footer_icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="footer_icon"><i class="fab fa-linkedin"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
{% endfor %}