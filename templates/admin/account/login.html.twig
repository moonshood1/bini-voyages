{% extends "admin/base.html.twig" %}
{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row h-100 w-100 ml-auto mr-auto">
            <div class="col my-auto">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-lock fa-2x"></i> Connexion Administration Bini Voyages</h5>
                        {% if error %}
                            <div class="alert alert-danger">Le nom d'utilisateur ou le mot de passe est incorrect</div>
                        {% endif %}
                        <form action="{{ path('admin_account_login') }}" method ="post" class="mt-3">
                            <div class="form-group">
                                <label for="_username">Adresse Email </label>
                                <input type="text" name="_username" id="_username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="_password">Mot de passe </label>
                                <input type="password" name="_password" id="_password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-unlock"></i>
                                    Connexion
                                </button>
                                <a href="{{ path('home') }}" class="btn btn-link">
                                    <i class="fas fa-arrow-circle-left"></i>
                                    Retour sur Bini-Voyages
                                </a>
                            </div>                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}