{% extends 'admin/base.html.twig' %}

{% block title %}Articles - Création{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
           {% include "admin/partials/navigation/navigation.html.twig" with {text:"Retour à la liste des articles", link:"admin_blog_index", detail_1:""} %} 
        </div>
        <div class="col-md-9">
            <div class="card mt-2">
                <div class="card-body">
                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
                {{ form_start(form) }}
                    <h4 class="card-title"> Modification de l'article : <b>{{ article.title }}</b>  </h4>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <h5>Titre et contenu & média </h5>
                            <small>Modifiez un ou plusieurs de la section selon vos besoins</small>
                            <hr>
                            {{ form_row(form.title) }}
                            {{ form_row(form.blog_category) }}
                            {{ form_row(form.main_image) }}
                            {% form_theme form 'bootstrap_4_layout.html.twig' %}
                            {{ form_row(form.content,{'attr':{'rows': 10}}) }}
                            <hr>
                            <h6>Seconde partie </h6>
                            <small>Section du second paragraphe de l'article</small>
                            <hr>
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.content_2,{'attr':{'rows': 8}}) }}
                                    {{ form_row(form.second_image) }}
                                </div>
                            </div> 
                            <hr>
                            <h6>Troisième partie </h6>
                            <small>Section du troisieme paragraphe de l'article</small>
                            <hr>
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.content_3,{'attr':{'rows': 8}}) }} 
                                    {{ form_row(form.third_image) }}
                                </div>
                            </div>                  
                            <h6>Images supplémentaires pour l'article </h6>
                            <small>Modifiez ou supprimez les url des images supplémentaries</small>
                            <hr>
                            <div class="row">
                                <div class="col-6">
                                    {{ form_row(form.fourth_image) }} 
                                </div>
                                <div class="col-6">
                                    {{ form_row(form.fifth_image) }}
                                </div>
                            </div>                  
                        </div>
                    </div>
                    <hr>
                    <h5>Confirmation de modification</h5>
                    <small>Vous pouvez à présent procéder à la modification de l'article</small>
                    <button type="submit" class="btn btn-outline-primary btn-lg btn-block mt-2">Modifier l'artcile</button>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}