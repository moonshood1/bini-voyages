{% extends 'admin/base.html.twig' %}

{% block title %}Circuits - Modification {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
           {% include "admin/partials/navigation/navigation.html.twig" with {text:"Retour à la liste des circuits", link:"admin_listing_index", detail_1:""} %} 
        </div>
        <div class="col-md-9">
            <div class="card mt-2">
                <div class="card-body">
                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
                    {{ form_start(form) }}
                    <h4 class="card-title">Modification du circuit - {{listing.title}} </h4>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <h5>Titre et informations de présentation</h5>
                            <small>Modifiez une ou plusieurs sections puis enregistrez</small>
                            <hr>
                            {{ form_row(form.title) }}
                            {{ form_row(form.listing_category) }}
                            {{ form_row(form.country) }}
                            {{ form_row(form.city) }}                            
                            {% form_theme form 'bootstrap_4_layout.html.twig' %}
                            {{ form_row(form.main_image) }}
                            {{ form_row(form.description,{'attr':{'rows':15}}) }}
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                        <h5>Montant, Localisation et contact</h5>
                        <small>Modifiez une ou plusieurs sections puis enregistrez</small>
                        <hr>
                            {{ form_row(form.price) }}
                            {{ form_row(form.location) }}
                            {{ form_row(form.contact) }}
                        </div>
                    </div>
                    {% form_theme form 'admin/partials/image_collection.html.twig' %}
                    <div class="row mt-2">
                        <div class="col-md-12">
                        <h5>Collection d'images du circuit</h5>
                        <small>Modifiez une ou plusieurs images puis enregistrez</small>
                        <hr>
                            {{ form_row(form.images) }}
                        </div>
                    </div>
                        <p class="float-right"><button type="submit" class="btn btn-outline-primary">Appliquer les modifications</button></p>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/listing.js"></script>
{% endblock %}
