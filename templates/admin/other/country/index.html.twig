{% extends 'admin/base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            {% include "admin/partials/flashes.html.twig" %}
            {% include "admin/partials/navigation/navigation.html.twig" with {text:"Retour Ã  l'accueil",link:"admin_home", detail_1:"Nombre total des pays : 2"} %} 
        </div>
        <div class="col-md-9">
            <div class="card my-2">
                <div class="card-body">
                <h4 class="card-title"> Liste des pays disponibles </h4>
                <p><a href="{{ path('admin_country_create') }}">Ajouter un pays</a></p>
                <table class="table table-hover">
                        <thead class="thead">
                            <tr>
                                <th scope="col">Nom du pays</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for country in countries %}
                                <tr>
                                    <td>{{ country.name }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('admin_country_delete',{'id': country.id } )}} " class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                        <a href="{{ path('admin_country_edit',{'id': country.id })}} " class="btn btn-dark"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}